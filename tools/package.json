{
  "name": "loottable-scraper",
  "version": "1.0.0",
  "description": "Wowhead Classic/TBC loot table scraper for LootTableExtreme",
  "main": "scraper.js",
  "scripts": {
    "scrape": "node scraper.js",
    "scrape-list": "node scraper.js --list npcs.txt",
    "scrape-tbc": "node scraper.js --list npcs_tbc.txt",
    "collect-npcs": "node collectNpcs.js",
    "collect-npcs-debug": "node collectNpcs.js --debug",
    "collect-npcs-tbc": "node collectNpcs.js --tbc",
    "collect-npcs-tbc-debug": "node collectNpcs.js --tbc --debug",
    "export": "node exportLua.js",
    "export-filtered": "node exportLua.js --min-sample 10",
    "query": "node queryDb.js",
    "db-stats": "node queryDb.js stats",
    "test": "node scraper.js --url https://www.wowhead.com/classic/npc=3260/bristleback-water-seeker",
    "test-debug": "node scraper.js --url https://www.wowhead.com/classic/npc=3260/bristleback-water-seeker --debug",
    "test-tbc": "node scraper.js --url https://www.wowhead.com/tbc/npc=16807/grand-commander-ruusk",
    "test-tbc-debug": "node scraper.js --url https://www.wowhead.com/tbc/npc=16807/grand-commander-ruusk --debug"
  },
  "keywords": [
    "wow",
    "classic",
    "tbc",
    "loot",
    "scraper",
    "wowhead"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "playwright": "^1.40.0",
    "sqlite3": "^5.1.7"
  }
}