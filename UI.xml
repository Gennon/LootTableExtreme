<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    
    <!-- Loot Table Viewer Frame -->
    <Frame name="LootTableExtremeFrame" parent="UIParent" frameStrata="DIALOG" toplevel="true" movable="true" enableMouse="true" hidden="true">
        <Size x="600" y="500"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        
        <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
        </Backdrop>
        
        <Frames>
            <!-- Title Bar -->
            <Button name="$parentTitle" inherits="UIPanelCloseButton">
                <Size x="32" y="32"/>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="-5" y="-5"/>
                    </Anchor>
                </Anchors>
            </Button>
            
            <!-- Enemy Name Display -->
            <Frame name="$parentHeader">
                <Size x="560" y="50"/>
                <Anchors>
                    <Anchor point="TOP">
                        <Offset x="0" y="-20"/>
                    </Anchor>
                </Anchors>
                
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentTitle" inherits="GameFontNormalLarge">
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset x="0" y="-5"/>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentSubtitle" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentTitle" relativePoint="BOTTOM">
                                    <Offset x="0" y="-5"/>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            
            <!-- Filter Options Frame -->
            <Frame name="$parentFilters">
                <Size x="560" y="80"/>
                <Anchors>
                    <Anchor point="TOP" relativeTo="$parentHeader" relativePoint="BOTTOM">
                        <Offset x="0" y="-5"/>
                    </Anchor>
                </Anchors>
                
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentLabel" inherits="GameFontNormal" text="Show:">
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset x="20" y="-5"/>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>
            
            <!-- Scroll Frame for Loot List -->
            <ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">
                <Size x="550" y="300"/>
                <Anchors>
                    <Anchor point="TOP" relativeTo="$parentFilters" relativePoint="BOTTOM">
                        <Offset x="0" y="-10"/>
                    </Anchor>
                </Anchors>
            </ScrollFrame>
            
            <!-- Search Box -->
            <EditBox name="$parentSearchBox" autoFocus="false" letters="50">
                <Size x="200" y="30"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT">
                        <Offset x="20" y="20"/>
                    </Anchor>
                </Anchors>
                
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture>
                            <Color r="0" g="0" b="0" a="0.5"/>
                        </Texture>
                    </Layer>
                </Layers>
                
                <FontString inherits="ChatFontNormal"/>
            </EditBox>
            
            <!-- Search Button -->
            <Button name="$parentSearchButton" inherits="UIPanelButtonTemplate" text="Search Enemy">
                <Size x="120" y="25"/>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentSearchBox" relativePoint="RIGHT">
                        <Offset x="10" y="0"/>
                    </Anchor>
                </Anchors>
            </Button>
            
            <!-- Show Target Button -->
            <Button name="$parentShowTargetButton" inherits="UIPanelButtonTemplate" text="Show Target">
                <Size x="120" y="25"/>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentSearchButton" relativePoint="RIGHT">
                        <Offset x="10" y="0"/>
                    </Anchor>
                </Anchors>
            </Button>
            
            <!-- Mode Toggle Button -->
            <Button name="$parentModeToggle" inherits="UIPanelButtonTemplate" text="Advanced">
                <Size x="100" y="25"/>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="-40" y="-10"/>
                    </Anchor>
                </Anchors>
            </Button>
        </Frames>
        
        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>
    
</Ui>
