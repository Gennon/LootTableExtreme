<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <!-- Loot Table Viewer - Settings window -->
    <Frame name="LootTableExtremeSettings" parent="UIParent" frameStrata="DIALOG" toplevel="true" movable="true" enableMouse="true" hidden="true">
        <Size x="480" y="420"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

       <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
        </Backdrop>

        <Frames>
            <Button name="LootTableExtremeSettingsClose" inherits="UIPanelCloseButton">
                <Size x="32" y="32"/>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="-6" y="-6"/>
                    </Anchor>
                </Anchors>
            </Button>

            <Frame name="LootTableExtremeFrameFilters">
                <Size x="440" y="160"/>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="16" y="-30"/>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="LootTableExtremeFiltersLabel" inherits="GameFontNormal" text="Filters">
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset x="4" y="-6"/>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

        </Frames>

        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>
</Ui>
