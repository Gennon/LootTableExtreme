<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <!-- Loot Table Viewer - Simple main window -->
    <Frame name="LootTableExtremeFrame" parent="UIParent" frameStrata="DIALOG" toplevel="true" movable="true" enableMouse="true" hidden="true">
        <Size x="360" y="350"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>

        <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
        </Backdrop>

        <Frames>
            <!-- Close Button -->
            <Button name="$parentClose" inherits="UIPanelCloseButton">
                <Size x="32" y="32"/>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="-5" y="-5"/>
                    </Anchor>
                </Anchors>
            </Button>

            <!-- Header -->
            <Frame name="$parentHeader">
                <Size x="360" y="50"/>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="0" y="0"/>
                    </Anchor>
                </Anchors>

                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentTitle" inherits="GameFontNormalLarge">
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset x="10" y="-10"/>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentSubtitle" inherits="GameFontNormal">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
                                    <Offset x="0" y="-5"/>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <!-- Scroll Frame for Loot List -->
            <ScrollFrame name="$parentScrollFrame" inherits="FauxScrollFrameTemplate">                
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentHeader" relativePoint="BOTTOMLEFT">
                        <Offset x="0" y="-10"/>
                    </Anchor>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$parent">
                        <Offset x="0" y="10"/>
                    </Anchor>
                </Anchors>
            </ScrollFrame>

            <!-- Mode / Settings Button (icon) -->
            <Button name="$parentModeToggle" inherits="UIPanelButtonTemplate">
                <!-- small icon to match close button weight -->
                <Size x="24" y="20"/>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <!-- place just left of close button -->
                        <Offset x="-44" y="-10"/>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentTexture" file="Interface\Buttons\UI-OptionsButton" parentKey="texture">
                            <Size x="12" y="12"/>
                            <Anchors>
                                <Anchor point="CENTER"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Button>
        </Frames>

        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
    </Frame>
</Ui>
